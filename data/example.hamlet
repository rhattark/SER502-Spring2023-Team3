act
  scene
    let numeral a be 10.
    let verse b be "Hello world".
    let bool c be a > 5.
    sayeth a.
    sayeth b.
    sayeth c.
    if it be c then thee shall
      sayeth "The condition is true".
    otherwise
      sayeth "The condition is false".
  end scene
  scene
    forsooth, let i be 1 to 5 by step size of 1. doth
      sayeth i.
  end scene
  scene
    whilst it be i <= 5 doth
      sayeth i.
      let i be i + 1.
  end scene
end act